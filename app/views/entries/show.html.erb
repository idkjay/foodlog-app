<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_fs(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">


    <nav class="panel is-link">Meal Type:
      <p class="panel-heading">
        <%= @entry.meal_type %>      
      </p>
    


      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>

      <div class="panel-block">
        Proteins: <%= @entry.proteins %>
      </div>

      <div class="panel-block">
        Carbohydrates: <%= @entry.carbohydrates %>
      </div>

      <div class="panel-block">
        Sodium: <%= @entry.sodium %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Return", root_path, class: "button is-gray"%>
        <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %> 
        <%= link_to 'Destroy', @entry, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
      <div class="column">
      
      </div>
    </div>
  </div>
</div>
